<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
  <definition name="loginDef" template="/WEB-INF/pages/template/loginTemp.jsp">
    <put-attribute name="body" value="/WEB-INF/pages/template/user/body.jsp" />
  </definition>

  <definition name="login" extends="loginDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/login.jsp" />
  </definition>

  <definition name="userDef" template="/WEB-INF/pages/template/user/userTemp.jsp">
    <put-attribute name="header" value="/WEB-INF/pages/template/user/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/pages/template/user/body.jsp" />
    <put-attribute name="left" value="/WEB-INF/pages/template/user/left.jsp" />
  </definition>
  <definition name="user/*" extends="userDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/user/{1}.jsp" />
  </definition>
  <definition name="user/*/*" extends="userDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/user/{1}/{2}.jsp" />
  </definition>
  <definition name="user/*/*/*" extends="userDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/user/{1}/{2}/{3}.jsp" />
  </definition>
  <definition name="user/*/*/*/*" extends="userDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/user/{1}/{2}/{3}/{4}.jsp" />
  </definition>

  <!-- Error page -->
  <definition name="error" template="/WEB-INF/pages/views/errorPage.jsp" />

</tiles-definitions>
